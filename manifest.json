{
    
    "name": "Get privacy scores",
    "description": "get privacy scores from website",
    "version": "0.3",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "tabs",
        "<all_urls>"
    ],
    "background": {
        "scripts": [
            "scripts/jquery.js",
            "scripts/background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": ["css/content.css"],
            "js": [
                "scripts/jquery.js",
                "scripts/content.js"
            ]
        }
    ],
    "browser_action": {
		"default_icon": {
            "19": "./images/grey.png",
            "38": "./images/grey.png"
		},
		"default_title": "Get Privacy score"
	},
	"icons": {
        "19": "./images/grey.png",
        "38": "./images/grey.png"
	},
	"manifest_version": 2
}
